{{#each errors}}
    <div class="alert alert-danger d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
    <div>
        {{text}}
    </div>
    </div>
{{/each}}
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group m-3">
                         <input type="text" class="form-control" name="name" placeholder="Name" value={{name}}>
                    </div>
                    <div class="form-group m-3">
                         <input type="email" class="form-control" name="email" placeholder="Email" value={{email}}>
                    </div>
                    <div class="form-group m-3">
                         <input type="password" name="password" class="form-control" placeholder="Password" value={{password}}>
                    </div>
                    <div class="form-group m-3">
                         <input type="password" name="confirm_password" class="form-control " placeholder="Repeat Password" value={{confirm_password}}>
                    </div>
                    <div class="form group">
                        <button type="submit" class="btn btn-primary btn-block m-3">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>